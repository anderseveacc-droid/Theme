<div class="order-form-container">
  <div class="order-form">
    <h2>Product Order Form</h2>
    <form id="order-form" style="max-width:400px;margin:2em auto;display:flex;flex-direction:column;gap:1em;">
      <div class="form-group">
        <label for="color">Choose a Color</label>
        <select id="color" name="color" required>
          <option value="orange">Orange</option>
          <option value="purple">Purple</option>
          <option value="red">Red</option>
        </select>
      </div>
      <button type="submit" class="btn">Buy Now</button>
    </form>

    <script>
    document.getElementById('order-form').addEventListener('submit', function(e) {
      e.preventDefault();
      var color = document.getElementById('color').value;
      var variantId = '';
      if (color === 'orange') variantId = '47206741639323';
      if (color === 'purple') variantId = '47206741672091';
      if (color === 'red') variantId = '47206741704859';
      var formData = new FormData();
      formData.append('id', variantId);
      fetch('/cart/add.js', {
        method: 'POST',
        body: formData,
        credentials: 'same-origin'
      })
      .then(function(response) {
        if (response.ok) {
          window.location.href = '/checkout';
        } else {
          alert('There was a problem adding the product to your cart.');
        }
      })
      .catch(function() {
        alert('There was a problem adding the product to your cart.');
      });
    });
    </script>
  </div>

  <div class="order-summary">
    <h2>Order Summary</h2>
    <div class="order-summary-item">
      <img src="{{ product.featured_image | img_url: 'small' }}" alt="{{ product.title }}">
      <div class="order-summary-details">
        <strong>{{ product.title }}</strong> | {{ product.price | money_with_currency }} each
      </div>
      <div>Qty: 1</div>
      <div>Total: {{ product.price | money_with_currency }}</div>
    </div>
  </div>
</div>
