<div class="order-form-container">
  <div class="order-form">
    <h2>Product Order Form</h2>
    <form action="/pages/payment" method="get">
      <!-- Hidden input for the product variant -->
      <input type="hidden" name="id" value="{{ product.variants.first.id }}">

      <div class="name-group">
        <div class="form-group">
          <label for="FullName-First">Full Name</label>
          <input type="text" id="FullName-First" name="first_name" placeholder="First" required>
        </div>
        <div class="form-group">
          <label for="FullName-Last">&nbsp;</label>
          <input type="text" id="FullName-Last" name="last_name" placeholder="Last" required>
        </div>
      </div>
      <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" name="email" required>
      </div>
      <div class="form-group">
        <label for="Phone">Phone Number</label>
        <input type="tel" id="Phone" name="phone" required>
      </div>
      <div class="form-group">
        <label for="Address1">Address</label>
        <input type="text" id="Address1" name="address1" placeholder="Address line 1" required>
      </div>
      <div class="form-group">
        <input type="text" id="Address2" name="address2" placeholder="Address line 2">
      </div>
      <div class="name-group">
          <div class="form-group">
            <input type="text" id="City" name="city" placeholder="City" required>
          </div>
          <div class="form-group">
            <input type="text" id="State" name="state" placeholder="State" required>
          </div>
      </div>
      <div class="name-group">
          <div class="form-group">
            <input type="text" id="PostalCode" name="postal_code" placeholder="Postal / Zip Code" required>
          </div>
          <div class="form-group">
            <input type="text" id="Country" name="country" placeholder="Country" required>
          </div>
      </div>
      <button type="submit" class="btn">Continue to Payment</button>
    </form>
  </div>

  <div class="order-summary">
    <h2>Order Summary</h2>
    <div class="order-summary-item">
      <!-- Replace with your product image -->
      <img src="{{ product.featured_image | img_url: 'small' }}" alt="{{ product.title }}">
      <div class="order-summary-details">
        <strong>{{ product.title }}</strong> | {{ product.price | money_with_currency }} each
      </div>
      <div>Qty: 1</div>
      <div>Total: {{ product.price | money_with_currency }}</div>
    </div>
    <div class="order-summary-totals">
      <div><span>Subtotal:</span> <span>{{ product.price | money_with_currency }}</span></div>
      <div><span>Shipping and Handling:</span> <span>Calculated at checkout</span></div>
      <div><span>Taxes:</span> <span>Calculated at checkout</span></div>
      <div class="total"><span>Total:</span> <span>{{ product.price | money_with_currency }}</span></div>
    </div>
  </div>
</div>
