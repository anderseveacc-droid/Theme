<div class="order-form-container">
  <div class="order-form" style="background: #fff; border-radius: 16px; box-shadow: 0 2px 12px #e0e0e0; padding: 40px 32px; margin-bottom: 32px;">
    <h2>Product Order Form</h2>
    <form id="order-form" style="max-width:400px;margin:2em auto;display:flex;flex-direction:column;gap:1em;">
      <div class="form-group">
        <label for="color">Choose a Color</label>
        <select id="color" name="color" required>
          <option value="orange">Orange</option>
          <option value="purple">Purple</option>
          <option value="red">Red</option>
        </select>
      </div>
      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" min="1" value="1" required>
      </div>
      <button type="submit" class="btn">Buy Now</button>
    </form>

    <script>
    // Variant IDs and prices for each color (replace with actual prices if needed)
    var variantIds = {
      orange: '47206741639323',
      purple: '47206741672091',
      red: '47206741704859'
    };
    var variantPrices = {
      orange: 5.99,
      purple: 5.99,
      red: 5.99
    };
    function formatMoney(amount) {
      return '$' + amount.toFixed(2);
    }
    function updateSummary() {
      var color = document.getElementById('color').value;
      var qty = parseInt(document.getElementById('quantity').value, 10) || 1;
      var price = variantPrices[color] || 0;
      document.getElementById('summary-qty').textContent = qty;
      document.getElementById('summary-price').textContent = formatMoney(price);
      document.getElementById('summary-total').textContent = formatMoney(price * qty);
    }
    document.getElementById('color').addEventListener('change', updateSummary);
    document.getElementById('quantity').addEventListener('input', updateSummary);
    document.getElementById('order-form').addEventListener('submit', function(e) {
      e.preventDefault();
      var color = document.getElementById('color').value;
      var qty = parseInt(document.getElementById('quantity').value, 10) || 1;
      var variantId = variantIds[color];
      var formData = new FormData();
      formData.append('id', variantId);
      formData.append('quantity', qty);
      fetch('/cart/add.js', {
        method: 'POST',
        body: formData,
        credentials: 'same-origin'
      })
      .then(function(response) {
        if (response.ok) {
          window.location.href = '/checkout';
        } else {
          alert('There was a problem adding the product to your cart.');
        }
      })
      .catch(function() {
        alert('There was a problem adding the product to your cart.');
      });
    });
    updateSummary();
    </script>
  </div>

  <div class="order-summary" style="background: #f7f8fa; border-radius: 16px; box-shadow: 0 2px 12px #e0e0e0; padding: 32px 28px; max-width: 370px; margin: -30px auto 20px; position: relative; z-index: 3;">
    <h2 style="color: #4a5a9a; font-size: 1.5em; margin-bottom: 22px; letter-spacing: 1px; text-align: center;">Order Summary</h2>
    <div class="order-summary-item" style="display: flex; align-items: center; gap: 18px; margin-bottom: 18px;">
      <img src="{{ product.featured_image | img_url: 'small' }}" alt="{{ product.title }}" style="width: 80px; height: 80px; object-fit: cover; border-radius: 10px; box-shadow: 0 2px 8px #e0e0e0;">
      <div style="flex: 1;">
        <div style="font-weight: bold; color: #222; font-size: 1.1em; margin-bottom: 4px;">{{ product.title }}</div>
        <div style="color: #2e72b4; font-size: 1.1em; font-weight: bold; margin-bottom: 6px;">Price: <span id="summary-price">$5.99</span></div>
        <div style="color: #666; font-size: 1em; margin-bottom: 6px;">Quantity: <span id="summary-qty">1</span></div>
        <div style="color: #f39c12; font-size: 1.1em; font-weight: bold;">Total: <span id="summary-total">$5.99</span></div>
      </div>
    </div>
  </div>
</div>
