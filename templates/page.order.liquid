<div class="container">
  <div class="order-layout">
    <div class="order-form card">
      <h2>Product Order Form</h2>
      <form id="order-form" class="form-vertical">
        <div class="form-row">
          <div>
            <label for="color">Color</label>
            <select id="color" name="color" required>
              <option value="orange">Orange</option>
              <option value="purple">Purple</option>
              <option value="red">Red</option>
            </select>
          </div>
          <div>
            <label for="quantity">Quantity</label>
            <input type="number" id="quantity" name="quantity" min="1" value="1" required>
          </div>
        </div>
        <div class="mt-6">
          <button type="submit" class="btn-primary">Buy Now</button>
        </div>
      </form>

    <script>
    // Variant IDs and prices for each color (replace with actual prices if needed)
    var variantIds = {
      orange: '47206741639323',
      purple: '47206741672091',
      red: '47206741704859'
    };
    var variantPrices = {
      orange: 5.99,
      purple: 5.99,
      red: 5.99
    };
    function formatMoney(amount) {
      return '$' + amount.toFixed(2);
    }
    function updateSummary() {
      var color = document.getElementById('color').value;
      var qty = parseInt(document.getElementById('quantity').value, 10) || 1;
      var price = variantPrices[color] || 0;
      document.getElementById('summary-qty').textContent = qty;
      document.getElementById('summary-price').textContent = formatMoney(price);
      document.getElementById('summary-total').textContent = formatMoney(price * qty);
    }
    document.getElementById('color').addEventListener('change', updateSummary);
    document.getElementById('quantity').addEventListener('input', updateSummary);
    document.getElementById('order-form').addEventListener('submit', function(e) {
      e.preventDefault();
      var color = document.getElementById('color').value;
      var qty = parseInt(document.getElementById('quantity').value, 10) || 1;
      var variantId = variantIds[color];
      var formData = new FormData();
      formData.append('id', variantId);
      formData.append('quantity', qty);
      fetch('/cart/add.js', {
        method: 'POST',
        body: formData,
        credentials: 'same-origin'
      })
      .then(function(response) {
        if (response.ok) {
          window.location.href = '/checkout';
        } else {
          alert('There was a problem adding the product to your cart.');
        }
      })
      .catch(function() {
        alert('There was a problem adding the product to your cart.');
      });
    });
    updateSummary();
    </script>
  </div>

    <aside class="summary-card">
      <h3>Order Summary</h3>
      <div class="summary-body">
        {% if product and product.featured_image != blank %}
          <img src="{{ product.featured_image | img_url: 'small' }}" alt="{{ product.title }}">
          <div class="summary-title">{{ product.title }}</div>
        {% else %}
          <!-- Fallback static image and title when product object is not available -->
          <img src="/assets/pk3.png" alt="Private Kitty">
          <div class="summary-title">Private Kitty Litter Cover</div>
        {% endif %}
  <div class="summary-price">Price: <span id="summary-price">$5.99</span></div>
  <div class="summary-qty">Quantity: <span id="summary-qty">1</span></div>
  <div class="summary-total">Total: <span id="summary-total">$5.99</span></div>
      </div>
    </aside>
  </div>
</div>
