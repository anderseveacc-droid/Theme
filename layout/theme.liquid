<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Link to your CSS file -->
    {{ 'style.css' | asset_url | stylesheet_tag }}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arial&display=swap" rel="stylesheet">
  </head>
  <body>

    <header class="site-header">
      <div class="header-bar"></div>
      <div class="header-content">
        <div class="logo-container">
          <!-- You will need to upload your logo to Shopify's file manager and replace the URL -->
          <a href="/" title="{{ shop.name }}">
            <img src="https://cdn.shopify.com/s/files/1/0716/7315/1643/files/Kitty_Brand.png?v=1755550339" alt="{{ shop.name }} Logo" />
          </a>
        </div>
        <nav class="main-navigation">
          <ul>
            <li><a href="/">HOME</a></li>
            <li><a href="/pages/about">ABOUT</a></li>
            <li><a href="/pages/order">ORDER</a></li>
            <li><a href="/pages/contact">CONTACT</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main role="main">
      {{ content_for_layout }}
    </main>

  </body>
</html>
